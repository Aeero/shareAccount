<view class="index">
  <view class="index-search">
    <input class="index-search-input"></input>
    <image class="index-search-icon" src="/images/search-sm.png"></image>
  </view>
  <view class="group">
    <view class="group-item" wx:for="{{groups}}" wx:for-item="item">
      <ribbon>as</ribbon>
      <view class="group-item-title">
        {{item.name}}
      </view> 
      <view class="group-item-content">
        <image class='group-item-img'></image>      
      </view> 
    </view>
    
  </view>
  
