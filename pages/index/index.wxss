/**index.wxss**/

.index {
}

.index-search {
  padding: 5px;
  margin-top: 5px;
  position: relative;
}

.index-search-icon {
  width: 18px;
  height: 18px;
  position: absolute;
  top: 0px;
  bottom: 0px;
  right: 16px;
  margin: auto;
  z-index: 10;
}

.index-search-input {
  background-color: #fff;
  height: 20px;
  padding: 5px 30px 5px 20px;
  border-radius: 15px;
  font-size: 12px;
}

.group {
  margin: 10px;
}

.new-group {
  width: 100rpx;
  height: 100rpx;
  margin: 0 auto;
  background-color: #fff;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.new-group-icon {
  width: 40rpx;
  height: 40rpx;
}

