/**index.wxss**/

.index {
}

.index-search {
  padding: 5px;
  margin-top: 5px;
  position: relative;
}

.index-search-icon {
  width: 18px;
  height: 18px;
  position: absolute;
  top: 0px;
  bottom: 0px;
  right: 16px;
  margin: auto;
  z-index: 10;
}

.index-search-input {
  background-color: #fff;
  height: 20px;
  padding: 5px 30px 5px 20px;
  border-radius: 15px;
  font-size: 12px;
}

.group {
  margin: 10px;
}
.group-item {
  background-color: #fff;
  box-shadow: 0 0 6px rgba(0, 0, 0, 0.08);
  border-radius: 4px;
  margin-bottom: 16px;
  position: relative;
}

.group-item-title {
  font-size: 14px;
  line-height: 28px;
  text-align: center;
  border-bottom: 1px solid #f3f3f3;
  color: #999;
}

.group-item-content {
  padding: 10px;
}

.group-item-img {
  width: 50px;
  height: 50px;
  border: 1px solid #eee;
  vertical-align: top;
  margin-right: 10px;
}
